<?xml version='1.0' encoding='utf-8'?>
<widget id="gob.riogrande.impuestos.1" version="1.0.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Impuestos Rio Grande</name>
    <description>
        Aplicaci√≥n para consulta y pago de impuestos del Municipio de Rio Grande.
    </description>  
    <author email="sistemas@riogrande.gob.ar" href="http://www.riogrande.gob.ar">
        Rentas Rio Grande
    </author>
    <content src="index.html" />
    <icon src="res/rg_254.png" />
    <allow-navigation href="https://aplicacionesapex.dir.riogrande.gob.ar/*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <icon src="res/rg_icon-58.png" platform="ios" width="58" height="58" />
    <icon src="res/rg_icon-87.png" platform="ios" width="87" height="87" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreenDuration" value="1000" />
    <platform name="android">
        <splash density="land-hdpi" src="res/screen/android/splash-land-hdpi.png" />
        <splash density="land-ldpi" src="res/screen/android/splash-land-ldpi.png" />
        <splash density="land-mdpi" src="res/screen/android/splash-land-mdpi.png" />
        <splash density="land-xhdpi" src="res/screen/android/splash-land-xhdpi.png" />
        <splash density="port-hdpi" src="res/screen/android/splash-port-hdpi.png" />
        <splash density="port-ldpi" src="res/screen/android/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="res/screen/android/splash-port-mdpi.png" />
        <splash density="port-xhdpi" src="res/screen/android/splash-port-xhdpi.png" />
    </platform>
    
  <splash src="res/ios-screen-iphone-portrait.png" platform="ios" width="320" height="480"/>
  <splash src="res/ios-screen-iphone-portrait-2x.png" platform="ios" width="640" height="960"/>
  <splash src="res/ios-screen-iphone-portrait-568h-2x.png" platform="ios" width="640" height="1136"/>
  
   <splash src="res/ios-750x1334.png" platform="ios" width="750" height="1334"/>
   <splash src="res/ios-768x1024.png" platform="ios" width="768" height="1024"/>
   <splash src="res/ios-1242x2208.png" platform="ios" width="1242" height="2208"/>
   <splash src="res/ios-1536x2048.png" platform="ios" width="1536" height="2048"/>
   <splash src="res/ios-2048x2732.png" platform="ios" width="2048" height="2732"/>

    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.1" />
    <plugin name="cordova-plugin-file" spec="4.3.3" />
    <plugin name="cordova-plugin-file-transfer" spec="1.6.3" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.1.0" />
    <plugin name="cordova-plugin-advanced-http" spec="^1.9.0" />
    <engine name="android" spec="^6.3.0" />
    <engine name="browser" spec="^5.0.3" />
    <engine name="ios" spec="^4.5.4" />
</widget>
